# Voice Assistant Environment Configuration
# This file contains all essential settings needed to start the app without errors
# Copy this file to .env and modify values as needed

# =============================================================================
# MOCK MODE SETTINGS (Recommended for testing/development)
# =============================================================================

# Enable mock providers for individual components
# Set to true to use mock providers instead of real implementations
MOCK_LLM=false
MOCK_TTS=false
MOCK_STT=false
MOCK_DISPLAY=false
MOCK_AUDIO=false

# =============================================================================
# BASIC APPLICATION SETTINGS
# =============================================================================

# Application name and version
ASSISTANT_NAME="Voice Assistant"
ASSISTANT_VERSION="1.0.0"

# Debug and logging
ASSISTANT_DEBUG=true
ASSISTANT_LOG_LEVEL=DEBUG

# ============================================================================= 
# LLM CONFIGURATION
# ============================================================================= 

# LLM Provider Type
# Options: local, openai, mock
LLM_PROVIDER_TYPE=local

# LLM Model ID (must match an id in models.json)
# The model details (repo, paths, patterns, temperature, context_window, etc.) are defined in models.json
LLM_MODEL_ID=llama32-1b-q6k

# LLM Generation Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512
LLM_TOP_P=0.9
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0
LLM_STOP=null
LLM_STREAM=false
LLM_TIMEOUT=30
LLM_RETRIES=3

# LLM Performance Settings
LLM_GPU_LAYERS=33
LLM_THREADS=8
LLM_CONTEXT_WINDOW=2048
LLM_USE_MMAP=true
LLM_USE_MLOCK=true
LLM_NGL=33
LLM_MAIN_GPU=0
LLM_TENSOR_SPLIT=null

# LLM API settings (for OpenAI provider)
LLM_API_KEY=null
LLM_BASE_URL=null
LLM_ORGANIZATION=null

# LLM Memory and logging
LLM_ENABLE_MEMORY=true
LLM_ENABLE_CHAT_LOG=true
LLM_MEMORY_MAX_TOKENS=1000
LLM_MEMORY_FILE="data/memory.yaml"
LLM_MEMORY_MAX_ENTRIES=100

# =============================================================================
# TTS CONFIGURATION - Piper only
# =============================================================================

# TTS Model Path
TTS_MODEL_PATH="models/piper/en_US-lessac-medium/en_US-lessac-medium.onnx"

# TTS Parameters
TTS_SPEED=1.0
TTS_PITCH=1.0
TTS_VOLUME=1.0
TTS_ENABLE_MOCK=false

# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BUFFER_SIZE=1024
AUDIO_INPUT_DEVICE=null
AUDIO_OUTPUT_DEVICE=null
AUDIO_ENABLE_MOCK=false

# =============================================================================
# DISPLAY CONFIGURATION
# =============================================================================

# Display Mode
# Options: dual_display, single_display, led_stripe, disabled
DISPLAY_MODE=dual_display

# Display Settings
DISPLAY_RESOLUTION="800,480"
DISPLAY_FPS=30
DISPLAY_DEVELOPMENT_MODE=true
DISPLAY_WINDOW_POSITIONS=null
DISPLAY_FULLSCREEN=false
DISPLAY_BORDERLESS=false
DISPLAY_ALWAYS_ON_TOP=false
DISPLAY_LED_COUNT=60
DISPLAY_LED_PIN=18
DISPLAY_TOUCH_ENABLED=true
DISPLAY_CALIBRATION_FILE=null

# =============================================================================
# CAMERA CONFIGURATION (Disabled by default)
# =============================================================================

# Camera Settings
CAMERA_ENABLED=false
CAMERA_DEVICE_ID=0
CAMERA_RESOLUTION="640,480"
CAMERA_FPS=30

# =============================================================================
# CONVERSATION CONFIGURATION
# =============================================================================

# Conversation Settings
CONVERSATION_MAX_HISTORY=10
CONVERSATION_RESPONSE_THRESHOLD=0.3
CONVERSATION_ENABLE_MEMORY=true
CONVERSATION_MEMORY_WEIGHT=0.2

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEVELOPMENT_ENABLE_DEBUG_LOGGING=true
DEVELOPMENT_ENABLE_MOCK_MODE=false
DEVELOPMENT_MOCK_LLM=false
DEVELOPMENT_MOCK_TTS=false
DEVELOPMENT_MOCK_STT=false
DEVELOPMENT_MOCK_DISPLAY=false
DEVELOPMENT_MOCK_AUDIO=false

# =============================================================================
# DIRECTORY PATHS
# =============================================================================

# Directory Configuration
DATA_DIR=data
MODELS_DIR=models
VOICES_DIR=voices
CONFIG_DIR=config
LOGS_DIR=logs

# =============================================================================
# PYTHON CONFIGURATION
# =============================================================================

# Python Path
PYTHONPATH=/app

# =============================================================================
# DOCKER-SPECIFIC SETTINGS
# =============================================================================

# Docker Environment Detection
DOCKER_ENV=true

# Audio Device Mapping (for Docker)
# AUDIO_INPUT_DEVICE=/dev/snd
# AUDIO_OUTPUT_DEVICE=/dev/snd

# Display Device Mapping (for Docker)
# DISPLAY_EYES_DISPLAY=/dev/fb0
# DISPLAY_MOUTH_DISPLAY=/dev/fb1