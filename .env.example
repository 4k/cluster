# Cluster Voice Assistant Configuration Example
# Copy this file to .env and adjust values as needed

# Mock mode settings - useful for testing without hardware or models
MOCK_STT=true
MOCK_AMBIENT_STT=true
MOCK_AUDIO=false
MOCK_TTS=false
MOCK_LLM=false
MOCK_DISPLAY=false

# Ambient STT Configuration
# Enable/disable ambient listening (always-on speech recognition)
AMBIENT_STT_ENABLED=true

# Path to the Vosk model for ambient STT (use lighter model for better performance)
# Available models:
# - models/vosk-model-small-en-us-0.15 (40MB, fast, recommended for ambient mode)
# - models/vosk-model-small-en-us-0.22 (larger, more accurate)
AMBIENT_STT_MODEL_PATH=models/vosk-model-small-en-us-0.15

# Minimum confidence threshold for ambient speech (0.0-1.0)
# Lower values = more sensitive, may have false positives
AMBIENT_STT_CONFIDENCE_THRESHOLD=0.3

# Minimum confidence to emit a result
AMBIENT_STT_MIN_CONFIDENCE=0.3

# Wake word timeout in seconds
# How long to stay in "wakeword" mode after wake word detection
AMBIENT_STT_WAKE_WORD_TIMEOUT=5.0

# Frame skip - process every Nth frame (1=all frames, 2=every other frame)
# Higher values reduce CPU usage but may miss short utterances
AMBIENT_STT_FRAME_SKIP=1

# Language for ambient STT
AMBIENT_STT_LANGUAGE=en

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_BUFFER_SIZE=1024
AUDIO_CHANNELS=1

# Log level (DEBUG, INFO, WARNING, ERROR)
ASSISTANT_LOG_LEVEL=INFO
